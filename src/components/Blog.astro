---
// src/pages/blog.astro
import { blogPosts } from '../data/blog';
---

<section class="max-w-4xl mx-auto py-16 px-4">
  <div class="cyber-header mb-12">
    <div class="title-container">
      <h1 class="cyber-title">Blog<span class="blink">|</span></h1>
      <div class="cyber-subtitle">
        <span class="bracket">//</span>
        Reflexiones y tutoriales sobre desarrollo web y diseño
      </div>
    </div>
  </div>

  <div class="cyber-grid">
    {
      blogPosts.map((post) => (
        <article class="cyber-card">
          <div class="card-header">
            <div class="header-content">
              <div class="status-indicator"></div>
              <h2 class="post-title">{post.title}</h2>
            </div>
            <a
              href={post.link}
              target="_blank"
              rel="noopener noreferrer"
              class="cyber-link"
              aria-label={`Leer ${post.title} en ${post.platform}`}
            >
              <div class="link-border">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </svg>
              </div>
            </a>
          </div>

          <div class="card-meta">
            <div class="meta-item">
              <span class="meta-label">{post.platform}</span>
              <span class="separator">•</span>
              <span class="meta-value">{post.readingTime} min de lectura</span>
            </div>
          </div>

          <div class="progress-container">
            <div class="progress-label">
              <span class="date">{post.date}</span>
              <span class="reading-time">{post.readingTime}m</span>
            </div>
            <div class="cyber-progress">
              <div
                class="progress-fill"
                style={`width: ${post.readingTime * 5}%`}
              />
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .cyber-header {
    position: relative;
    margin-bottom: 3rem;
  }

  .cyber-title {
    font-family: var(--font-title);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accets);
    letter-spacing: 0.1em;
    margin: 0;
    position: relative;
  }

  .blink {
    color: var(--primary);
    animation: blink 1s infinite;
    margin-left: 0.2em;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .cyber-subtitle {
    font-family: var(--font-body);
    color: var(--secondary);
    font-size: 1rem;
    margin-top: 1rem;
  }

  .bracket {
    color: var(--primary);
    margin-right: 0.5rem;
  }

  .cyber-grid {
    display: grid;
    gap: 1.5rem;
  }

  .cyber-card {
    background: var(--carbon);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
    position: relative;
    transition: all 0.3s ease;
  }

  .cyber-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: rgba(211, 47, 47, 0.3);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .status-indicator {
    width: 6px;
    height: 6px;
    background: var(--primary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
  }

  .post-title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--accets);
    margin: 0;
    font-weight: 600;
  }

  .cyber-link {
    color: var(--secondary);
    transition: all 0.3s ease;
  }

  .link-border {
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition: all 0.3s ease;
  }

  .cyber-link:hover {
    color: var(--primary);
  }

  .card-meta {
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--secondary);
  }

  .separator {
    color: var(--primary);
  }

  .progress-container {
    display: grid;
    gap: 0.5rem;
  }

  .progress-label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font-body);
    font-size: 0.875rem;
  }

  .date {
    color: var(--secondary);
  }

  .reading-time {
    color: var(--secondary);
  }

  .cyber-progress {
    height: 4px;
    background: var(--background);
    border-radius: 2px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--primary);
    transition: width 0.3s ease;
  }

  @media (max-width: 640px) {
    .cyber-title {
      font-size: 1.75rem;
    }

    .cyber-card {
      padding: 1rem;
    }

    .meta-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .separator {
      display: none;
    }
  }
</style>