---
// src/pages/blog.astro
import { blogPosts } from '../data/blog';
---

<section class="max-w-4xl mx-auto py-16 px-4">
  <div class="cyber-header mb-12">
    <div class="title-container">
      <h1 class="cyber-title">Blog<span class="blink">_</span></h1>
      <div class="cyber-subtitle">
        Reflexiones y tutoriales sobre desarrollo web y diseño
      </div>
    </div>
  </div>

  <div class="cyber-grid">
    {
      blogPosts.map((post) => (
        <article class="cyber-card">
          <div class="card-content">
            <div class="card-header">
              <div class="header-content">
                <h2 class="post-title">{post.title}</h2>
              </div>
              <a
                href={post.link}
                target="_blank"
                rel="noopener noreferrer"
                class="cyber-link"
                aria-label={`Leer ${post.title} en ${post.platform}`}
              >
                <div class="link-border">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    <polyline points="15 3 21 3 21 9" />
                    <line x1="10" y1="14" x2="21" y2="3" />
                  </svg>
                </div>
              </a>
            </div>

            <div class="card-meta">
              <div class="meta-item">
                <span class="meta-value">{post.platform}</span>
                <span class="separator">•</span>
                <span class="meta-value">{post.readingTime} min de lectura</span>
              </div>
            </div>

            <div class="progress-container">
              <div class="progress-label">
                <span class="date">{post.date}</span>
                <span class="reading-time">{post.readingTime}m</span>
              </div>
              <div class="cyber-progress">
                <div
                  class="progress-fill"
                  style={`width: ${post.readingTime * 5}%`}
                />
              </div>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .cyber-header {
    position: relative;
    margin-bottom: 3rem;
  }

  .code-prefix {
    font-family: var(--font-title);
    color: var(--secondary);
    font-size: 0.875rem;
    opacity: 0.7;
    margin-bottom: 0.5rem;
  }

  .cyber-title {
    font-family: var(--font-title);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accets);
    letter-spacing: 0.1em;
    margin: 0;
    position: relative;
  }

  .blink {
    color: var(--primary);
    animation: blink 1s infinite;
    margin-left: 0.2em;
  }
  .cyber-subtitle {
    font-family: var(--font-body);
    color: var(--secondary);
    font-size: 1rem;
    margin-top: 1rem;
  }

  .cyber-grid {
    display: grid;
    gap: 1.5rem;
  }

  .cyber-card {
    position: relative;
    background: var(--carbon);
    clip-path: polygon(
      0 0,
      100% 0,
      100% calc(100% - 15px),
      calc(100% - 15px) 100%,
      0 100%
    );
    transition: all 0.3s ease;
    padding: 2px; /* This creates the border effect */
  }

  .card-content {
    background: var(--carbon);
    clip-path: polygon(
      0 0,
      100% 0,
      100% calc(100% - 15px),
      calc(100% - 15px) 100%,
      0 100%
    );
    padding: 1.5rem;
  }

  .cyber-card:hover {
    transform: translateY(-2px);
  }

  .cyber-card:hover .card-content {
    background: var(--background);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    position: relative;
  }

  .post-title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--accets);
    margin: 0;
    font-weight: 600;
  }

  .cyber-link {
    color: var(--secondary);
    transition: all 0.3s ease;
  }

  .link-border {
    padding: 0.5rem;
    transition: all 0.3s ease;
  }

  .cyber-link:hover {
    color: var(--primary);
  }

  .card-meta {
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--secondary);
  }

  .separator {
    color: var(--primary);
  }

  .progress-container {
    display: grid;
    gap: 0.5rem;
  }

  .progress-label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--secondary);
  }

  .cyber-progress {
    height: 4px;
    background: var(--background);
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--primary);
    transition: width 0.3s ease;
  }

  @media (max-width: 640px) {
    .cyber-title {
      font-size: 1.75rem;
    }

    .cyber-card {
      clip-path: polygon(
        0 0,
        100% 0,
        100% calc(100% - 10px),
        calc(100% - 10px) 100%,
        0 100%
      );
    }

    .card-content {
      padding: 1rem;
      clip-path: polygon(
        0 0,
        100% 0,
        100% calc(100% - 10px),
        calc(100% - 10px) 100%,
        0 100%
      );
    }

    .card-header::before {
      left: -1rem;
      width: 10px;
    }

    .meta-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .separator {
      display: none;
    }
  }
</style>