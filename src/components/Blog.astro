---
import Layout from '../layouts/Layout.astro';

const blogPosts = [
    {
        title: "Mi primer post sobre desarrollo web",
        description: "Una introducción al mundo del desarrollo web moderno...",
        date: "2024-03-15",
        author: "Tu Nombre",
        slug: "primer-post",
        tags: ["web", "desarrollo", "principiante"]
    },
    {
        title: "Cómo construí mi portafolio con Astro",
        description: "Un vistazo a mi experiencia construyendo este sitio web...",
        date: "2024-03-20",
        author: "Tu Nombre",
        slug: "construccion-portafolio",
        tags: ["astro", "portafolio", "desarrollo"]
    }
];
---

<Layout title="Blog | Mi Portafolio">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Blog</h1>
        
        <!-- Sección de Posts Destacados -->
        <section class="mb-12">
            <h2 class="text-2xl font-semibold mb-6">Posts Destacados</h2>
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {blogPosts.map((post) => (
                    <article class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
                        <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
                            <time datetime={post.date}>
                                {new Date(post.date).toLocaleDateString()}
                            </time>
                            • 
                            <span>{post.author}</span>
                        </div>
                        
                        <h3 class="text-xl font-semibold mb-2">
                            <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                                {post.title}
                            </a>
                        </h3>
                        
                        <p class="text-gray-700 mb-4">
                            {post.description}
                        </p>
                        
                        <div class="flex flex-wrap gap-2">
                            {post.tags.map((tag) => (
                                <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">
                                    #{tag}
                                </span>
                            ))}
                        </div>
                    </article>
                ))}
            </div>
        </section>

        <!-- Barra de Búsqueda -->
        <section class="mb-12">
            <div class="max-w-md">
                <input
                    type="search"
                    placeholder="Buscar posts..."
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
            </div>
        </section>

        <!-- Lista de Todos los Posts -->
        <section>
            <h2 class="text-2xl font-semibold mb-6">Todos los Posts</h2>
            <div class="space-y-6">
                {blogPosts.map((post) => (
                    <article class="border-b pb-6">
                        <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
                            <time datetime={post.date}>
                                {new Date(post.date).toLocaleDateString()}
                            </time>
                            • 
                            <span>{post.author}</span>
                        </div>
                        
                        <h3 class="text-xl font-semibold mb-2">
                            <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                                {post.title}
                            </a>
                        </h3>
                        
                        <p class="text-gray-700">
                            {post.description}
                        </p>
                    </article>
                ))}
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Estilos específicos para la página de blog si son necesarios */
</style>